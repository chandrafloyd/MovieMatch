@using Microsoft.AspNet.Identity;


<form action="/Home/FindMovieByMood/" method="get" class="form-inline">
	<div class="form-inline">
		Please select a genre:<br />
		<select name="with_genres" required">
			<option value="35">Comedy</option>
			<option value="18">Drama</option>
			<option value="27">Horror</option>
			<option value="10749">Romance</option>
		</select>
	</div><br />
	<div class="form-inline">
		<input type="submit" value="Search" />
	</div>
</form>





<table class="table">

	<tr>
		<th>Title</th>




		<th></th>
		<th>Add to My List</th>
	</tr>


	@foreach (var r in ViewBag.RawResults)
	{
		{
			<tr>
				<td>@r["original_title"]</td>
				<td><img src="https://image.tmdb.org/t/p/w500/@r["poster_path"]" height="165" width="110" /></td>

				<td><a href="/Home/FindMood?title=@r["original_title"]&with_genres=@r["genre_ids"]&poster_path=@r["poster_path"]&primary_release_year=@r["release_date"]&Id=@User.Identity.GetUserId()">Find Mood</a></td>
			</tr>}
	}
</table>


