@using Microsoft.AspNet.Identity;

<table class="table">

    <tr>

        <th></th>
        <th>Title</th>
        <th>Genre</th>
        <th>Year</th>
        <th>Runtime</th>
        <th>Plot</th>
        <th>Add to My List</th>
    </tr>


    @foreach (var r in ViewBag.RawResults)
    {
        {
            <tr>
                <td><img src="https://image.tmdb.org/t/p/w500/@r["poster_path"]" height="165" width="110" /></td>
                <td>@r["original_title"]</td>
                <td>@r["with_genre"]</td>  @*added here and to query string; where is data?*@
                <td>@r["release_date"]</td>   @*want the 4 digit year not m/d/y*@
                <td>@r["runtime"]</td>@*added here and to query string; where is data?*@
                <td>@r["overview"]</td>
                <td><a href="/Home/AddRecommendationToMovieList?title=@r["original_title"]&overview=@r["overview"]&poster_path=@r["poster_path"]&primary_release_year=@r["release_date"]&with_genre=@r["with_genre"]&runtime=@r["runtime"]&Id=@User.Identity.GetUserId()" onclick="ConfirmAddToList()">Add to My List</a></td>
            </tr>

        }
    }
</table>


