@using Microsoft.AspNet.Identity;
<h1>Search Results</h1>

<table class="table">

    <tr>
        <th>Title</th>
        <th>Poster</th>
        <th>Plot</th>
        <th>Add to My List</th>
    </tr>


    @foreach (var r in ViewBag.RawResults)
    {
        {
            <tr>
                <td>@r["original_title"]</td>
                <td><img src="@r["poster_path"]" /></td>
                <td>@r["overview"]</td>
                <td><a href="/Azure/AddToMovieList?title=@r["original_title"]">Add to My List</a></td>
            </tr>
        }
    }
</table>
<input type="hidden" name="Id" value="@User.Identity.GetUserId()" />